<% content_for :page_title, @review.title %>

<h1> <%= @review.title %> </h1>
<h2> <%= @review.restaurant %> </h2>

<div class="score">
    <%= @review.score %> / 10
</div>

<% if @review.ambiance.present? %>
  <div class="ambiance">
    Ambiance: <%= @review.ambiance %> 
  </div>
<% end %>

<% if @review.price.present? %>
  <div class="price">
    Price: <%= @review.price %> 
  </div>
<% end %>

<% if @review.cuisine.present? %>
  <div class="cuisine">
    Cuisine: <%= @review.cuisine %> 
  </div>
<% end %>

<div class="body">
<%
=begin%>
  formatting the text with simple_format helper
<%
=end%>
    <%= simple_format @review.body %>
</div>

<div class="actions">
  <%= link_to "Edit this review", edit_review_path(@review) %>
  <%= link_to "Delete this review", @review, data: { 'method': :delete, 'confirm': "Are you sure?" } %>
  </div>

  